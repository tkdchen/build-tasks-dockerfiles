{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "regexManagers": [
    {
      "fileMatch": ["^source-container-build/Dockerfile$"],
      "matchStrings": ["ARG BSI_VERSION=(?<currentValue>.+?)\\n"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "containers/BuildSourceImage",
      "extractVersionTemplate": "^v(?<version>.*)(: .+)?$"
    }
  ],

  "packageRules": [
    {
      "groupName": "python deps for tests",
      "description": "Group Python dependencies included for running tests",
      "matchFileNames": [
        "**/requirements-dev.in",
        "**/requirements-dev.txt",
        "**/requirements-tests?.in",
        "**/requirements-tests?.txt"
      ],
      "matchDatasources": ["pypi"]
    }
  ]
}
